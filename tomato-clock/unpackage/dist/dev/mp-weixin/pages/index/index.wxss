}
.progress {
  width: 400rpx;
  height: 400rpx;
  background-color: #fc9d9a;
  margin: 140rpx auto;
  position: relative;
}
.progress .progress_bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 400rpx;
}
.progress .progress_active {
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 400rpx;
}
